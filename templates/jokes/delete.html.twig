{% extends 'base.html.twig' %}
{% block title %}Delete Confirmation - JokesWebApp{% endblock %}
{% block body %}
<div class="container body-content">
        

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Joke</h4>
    <hr>
    <dl class="dl-horizontal">
        <dt>
            JokeQuestion
        </dt>
        <dd>
           {{ joke.JokeQuestion }}
        </dd>
        <dt>
            JokeAnswer
        </dt>
        <dd>
            {{ joke.JokeAnswer }}
        </dd>
    </dl>
    
    <form action="/Jokes/Delete/{{ joke.id }}" method="POST">
        <input type="hidden" data-val="true" data-val-required="The Id field is required." id="Id" name="Id" value="{{ joke.id }}">
        <input type="submit" value="Delete" class="btn btn-dark"> |
        <a href="/Jokes">Back to List</a>
		<input type="hidden" id="JokeAnswer" name="__RequestVerificationToken" value="1234">
    </form>
</div>

